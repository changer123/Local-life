.slides {
	height: 380rpx;
}
.slides image {
	width: 100%;
	height: 100%;
}
.grids {
	display: flex;
	flex-wrap: wrap;
	background-color: #fff;
	border-bottom: 1px solid #eee;
	border-left: 1px solid #eee;
	color: #888;
	font-size: 28rpx;
}
.grids .item {
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	width: 33.3333333%;
	height: 250rpx;
	border-right: 1rpx solid #eee;
	border-top: 1rpx solid #eee;
	box-sizing: border-box;
}
.grids .item image {
	width: 70rpx;
	height: 70rpx;
}
.grids .item text {
	margin-top: 20rpx;
	display: block;
}
.links {
  display: flex;
  margin: 30rpx 0 30rpx 40rpx;
}
.links image {
  display: block;
  width: 460rpx;
  height: 260rpx;
  flex: 1;
  margin-right:40rpx; 
}